#!/bin/bash

set -e

OKGREEN='\033[92m'
# WARNING='\033[93m'
# FAIL='\033[91m'
OKBLUE='\033[94m'
UNDERLINE='\033[4m'
ENDC='\033[0m'

echo "LEAP™ Transmission Control Software"
echo -e "-----------------------------------\n"
echo -e "${UNDERLINE}Development Team:${ENDC}" 
echo -e "Christian Sargusingh | ${OKBLUE}Lead Designer and Systems Engineer${ENDC}"
echo -e "Aaron Huang          | ${OKBLUE}Hardware Engineer${ENDC}"
echo -e "Brandon Zhu          | ${OKBLUE}Software Engineer${ENDC}"
echo -e "Steven Zhou          | ${OKBLUE}QA and Software Engineer${ENDC}"
echo -e "Version: ${OKBLUE}38bb9a56f7b1d7cf1b866e1bb883d81df54b179c @ https://github.com/LEAP-Systems/tesseract${ENDC}"
echo -e "Updated: ${OKBLUE}2020-08${ENDC}\n"
# setup environment
echo "Setting up environment ..."
export DIM=4
export T_FREQ=30
export HOSTNAME="$(hostname).local"
export PASSWORD=leap-0000
export PORT=65432
export SERIAL_PORT=/dev/ttyUSB0
export PAYLOAD_DIR=payload
export TCS_ENV=$1

echo -e "${OKGREEN} ✓ ${ENDC}Set transmitter dimension to ${OKGREEN}$DIM${ENDC}"
echo -e "${OKGREEN} ✓ ${ENDC}Set transmitter frequency to ${OKGREEN}$T_FREQ${ENDC}"
echo -e "${OKGREEN} ✓ ${ENDC}Set transmitter address to ${OKGREEN}$HOSTNAME:$PORT${ENDC}"
echo -e "${OKGREEN} ✓ ${ENDC}Set access point password to ${OKGREEN}$PASSWORD${ENDC}"
echo -e "${OKGREEN} ✓ ${ENDC}Set transmitter serial out to ${OKGREEN}$SERIAL_PORT${ENDC}"
echo -e "${OKGREEN} ✓ ${ENDC}Set payload directory to ${OKGREEN}$PAYLOAD_DIR${ENDC}"
echo -e "${OKGREEN} ✓ ${ENDC}Set tcs environment to ${OKGREEN}$TCS_ENV${ENDC}"
echo -e "${OKGREEN} ✓ ${ENDC}Setup complete "
echo -e "-----------------------------------\n"

# host ap
./bin/ap-enable

# tcs entry
python3 -m tcs
